
#define pin_sensor A0
#define pin_digital 13
float Analog;


void setup() {
  // put your setup code here, to run once:
  pinMode (pin_sensor, INPUT);
  pinMode (pin_digital, INPUT);
  Serial.begin(9600);

}

void loop() {
  char buffer[30];
  char destination[8];
  // put your main code here, to run repeatedly:
  float Analog = analogRead(pin_sensor)*(5.0 / 1023.0);
  dtostrf(Analog,5,2,destination); /*Double converted to string*/
  //Serial.println(destination);
  //snprintf(buffer,  sizeof(buffer), "the float number is %s", destination);
  snprintf(buffer,  sizeof(buffer), "%s", destination);
  Serial.println(buffer);
  delay(100);
  
}
